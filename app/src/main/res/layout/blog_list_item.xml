<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#BBBBBB"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:background="#919191"
        card_view:cardCornerRadius="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:id="@+id/likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descr"
                android:layout_alignParentStart="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="10dp"
                android:text="0 Likes"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/likeimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/descr"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_favorite_border_black_48dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="86dp"
                android:layout_marginTop="23dp"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/userimage"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="86dp"
                android:layout_marginTop="2dp"
                android:text="Blog Post Date"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:background="#C9C9C9"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/post"
                android:padding="5dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="238dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descr"
                android:layout_width="407dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/title"
                android:layout_marginStart="2dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/comment"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_below="@+id/descr"
                android:layout_alignParentStart="true"
                android:layout_marginStart="266dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_mode_comment_black_48dp" />

            <TextView
                android:id="@+id/commentcnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descr"
                android:layout_alignParentStart="true"
                android:layout_marginStart="306dp"
                android:layout_marginTop="12dp"
                android:text="0 Comments"
                android:textSize="15dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>